<h1>プロフィール編集</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "errors") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :"プロフィール写真" %>
  <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
  <%= f.hidden_field :image_cache %>
  <%= f.file_field :image %>
  <%= f.label :"名前" %>
  <%= f.text_field :name, placeholder: 'あなたの名前を入力してください。' %>
  <%= f.label :"メールアドレス" %>
  <%= f.email_field :email, placeholder: 'test@mail.com' %>
  <%= f.label :"パスワード" %>
  <%= f.password_field :password %>
  <%= f.label :"パスワード再確認" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit :"アカウントを作成" %>
<% end %>